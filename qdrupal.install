	$schema['qdrupal_setting'] = array(
		'description' => t('QDrupal Settings Table.'),
		'fields' => array(
			'sid' => array(
				'description' => t('The primary identifier for a Qdrupal application settings.'),
				'type' => 'serial',
				'unsigned' => TRUE,
