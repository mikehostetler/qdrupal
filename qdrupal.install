	$schema = array();
	$schema['qdrupal_application'] = array(
		'description' => t('QDrupal Application Data Table.'),
		'fields' => array(
			'aid' => array(
				'description' => t('The primary identifier for an application.'),
				'type' => 'serial',
				'unsigned' => TRUE,
				'not null' => TRUE),
			'shortname' => array(
				'description' => t('The shortname of the application. Used in URL and machine-readable labels'),
				'type' => 'varchar',
				'length' => 50,
				'not null' => TRUE,
				'default' => ''),
			'title' => array(
  			'description' => t('The title of the application. This is the human readable name for the application'),
  			'type' => 'varchar',
  			'length' => 50,
  			'not null' => TRUE,
  			'default' => ''),
  		'description' => array(
    		'description' => t('A description of the application.'),
    		'type' => 'varchar',
    		'length' => 50,
    		'not null' => TRUE,
    		'default' => ''),
			'is_module' => array(
				'type' => 'int', 
				'unsigned' => TRUE, 
				'size' => 'tiny', 
				'not null' => TRUE, 
				'disp-width' => '1'),
			),
		'primary key' => array('aid')
	);
	$schema['qdrupal_link'] = array(
		'description' => t('QDrupal Link Data Table.'),
