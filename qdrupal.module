/**
 * Helper function for hook_menu to validate a Qdrupal application node 
 */
function qdrupal_app_load($nid) {
	if (!is_numeric($nid)) {
		return FALSE;
	}
	$app = node_load($nid);
	if ($app->type != "qdrupal_application") {
		return FALSE;
	}
	return $app;
}

