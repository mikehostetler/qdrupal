function qdrupal_application_administer($node, $edit = NULL) {
	global $qdrupal_node;
	$qdrupal_node = $node;

	drupal_set_breadcrumb(array(
			l(t('Home'),NULL),
			l(t($node->title),'node/'.$node->nid),
